<?xml version="1.0" encoding="utf-8"?>
<manifest package="tr.edu.boun.bingedtv"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".controls.MainActivity"
            android:label="@string/app_name">
        </activity>
        <activity android:name=".controls.TraktAuthActivity">
        </activity>
        <activity android:name=".controls.SearchActivity">
        </activity>
        <activity android:name=".controls.ShowOverviewActivity">
        </activity>
        <activity android:name=".controls.ShowCastActivity">
        </activity>
        <activity android:name=".controls.ShowCommentsActivity">
        </activity>
        <activity android:name=".controls.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".controls.SeasonOverviewActivity">
        </activity>
        <activity android:name=".controls.EpisodeActivity">
        </activity>
    </application>

</manifest>